<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gdc.sud.ffja.advantiste.org.mygdcapplication.SharingActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/partage"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="-2dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="@dimen/app_left_margin"
            android:layout_marginTop="30dp"
            android:text="@string/sharing_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_editor_absoluteX="43dp"
            tools:layout_editor_absoluteY="204dp" />

        <TextView
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="@dimen/app_left_margin"
            android:layout_marginRight="@dimen/app_right_margin"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="none|textMultiLine"
            android:text="@string/sharing_text"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="228dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
